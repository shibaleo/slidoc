import fs from 'node:fs';
import path from 'node:path';
import { marked } from 'marked';
import { getPageUrlFromSlide } from '../../utils/urls';
import { isCategory } from '../../config/categories';

// Configure marked to generate heading IDs (for anchor links)
const renderer = new marked.Renderer();
renderer.heading = function({ text, depth }) {
  // Generate slug from heading text (similar to Starlight's behavior)
  const slug = text
    .toLowerCase()
    .replace(/[^\w\s\u3040-\u309f\u30a0-\u30ff\u4e00-\u9faf-]/g, '')
    .replace(/\s+/g, '-')
    .replace(/-+/g, '-')
    .replace(/^-|-$/g, '');
  return `<h${depth} id="${slug}">${text}</h${depth}>`;
};
marked.use({ renderer });

export async function getStaticPaths() {
  const docsDir = path.join(process.cwd(), 'src/content/docs');
  const paths: { params: { slug: string }; props: { filePath: string; title: string } }[] = [];

  function scanDir(dir: string, prefix: string = '') {
    const files = fs.readdirSync(dir);
    for (const file of files) {
      const fullPath = path.join(dir, file);
      const stat = fs.statSync(fullPath);
      if (stat.isDirectory()) {
        scanDir(fullPath, prefix ? `${prefix}/${file}` : file);
      } else if (file.endsWith('.mdx') || file.endsWith('.md')) {
        const baseName = file.replace(/\.(mdx?|md)$/, '');
        let slug = prefix ? `${prefix}/${baseName}` : baseName;
        // Skip root index only
        if (slug === 'index') continue;
        // カテゴリindexは /howto/index ではなく /howto にする
        if (baseName === 'index' && prefix) {
          slug = prefix;
        }
        paths.push({
          params: { slug },
          props: { filePath: fullPath, title: slug },
        });
      }
    }
  }

  scanDir(docsDir);
  return paths;
}

const { filePath, title: slugTitle } = Astro.props;
const slug = Astro.params.slug;

// Read file content
const content = fs.readFileSync(filePath, 'utf-8');

// Parse frontmatter
const frontmatterMatch = content.match(/^---\r?\n([\s\S]*?)\r?\n---\r?\n([\s\S]*)$/);
let title = slugTitle;
let description = '';
let body = content;

if (frontmatterMatch) {
  const frontmatter = frontmatterMatch[1];
  body = frontmatterMatch[2];
  const titleMatch = frontmatter.match(/title:\s*["']?([^"'\n]+)["']?/);
  const descMatch = frontmatter.match(/description:\s*["']?([^"'\n]+)["']?/);
  if (titleMatch) title = titleMatch[1];
  if (descMatch) description = descMatch[1];
}

// Normalize line endings and remove import statements and JSX components
body = body
  .replace(/\r\n/g, '\n')
  .replace(/^import\s+.*$/gm, '')
  .replace(/<[A-Z][a-zA-Z]*[^>]*>[\s\S]*?<\/[A-Z][a-zA-Z]*>/g, '')
  .replace(/<[A-Z][a-zA-Z]*[^>]*\/>/g, '')
  .trim();

// Protect code blocks from slide splitting and math processing
const codeBlockPlaceholder = '___CODE_BLOCK___';
const codeBlocks: string[] = [];
body = body.replace(/```[\s\S]*?```/g, (match) => {
  codeBlocks.push(match);
  return codeBlockPlaceholder + (codeBlocks.length - 1);
});

// Protect math expressions with placeholders (to avoid marked escaping them)
const mathPlaceholder = '___MATH___';
const mathExpressions: string[] = [];

// Block math: $$...$$
body = body.replace(/\$\$([\s\S]+?)\$\$/g, (_, math) => {
  mathExpressions.push(`$$${math.trim()}$$`);
  return mathPlaceholder + (mathExpressions.length - 1);
});

// Inline math: $...$
body = body.replace(/\$([^$\n]+)\$/g, (_, math) => {
  mathExpressions.push(`$${math.trim()}$`);
  return mathPlaceholder + (mathExpressions.length - 1);
});

// Split by horizontal rule (---) - must be on its own line
let slides = body.split(/\n---\n/).map(slide => slide.trim()).filter(s => s);

// Restore code blocks
slides = slides.map(slide => {
  return slide.replace(new RegExp(codeBlockPlaceholder + '(\\d+)', 'g'), (_, index) => {
    return codeBlocks[parseInt(index)];
  });
});

// Debug: log slide count
console.log(`[Slidoc] ${slug}: ${slides.length} slides found`);

// Convert each slide's markdown to HTML
let slidesHtml = await Promise.all(
  slides.map(async (slide) => {
    if (!slide) return '';
    return marked.parse(slide);
  })
);

// Restore math expressions after marked processing
slidesHtml = slidesHtml.map(html => {
  return html.replace(new RegExp(mathPlaceholder + '(\\d+)', 'g'), (_, index) => {
    return mathExpressions[parseInt(index)];
  });
});

const filteredSlidesHtml = slidesHtml.filter(html => html.trim());

// 戻り先URLをユーティリティ関数で取得
const docUrl = getPageUrlFromSlide(slug);
---

<!DOCTYPE html>
<html lang="ja" data-theme="dark">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - スライド | Slidoc</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reveal.js@5.2.1/dist/reset.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reveal.js@5.2.1/dist/reveal.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reveal.js@5.2.1/dist/theme/black.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reveal.js@5.2.1/plugin/highlight/monokai.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
  <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js"></script>
  <script is:inline>
    (function() {
      const theme = localStorage.getItem('starlight-theme') ||
        (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap');

    /* Dark theme (default) */
    :root {
      --r-background-color: #0a0a0a;
      --r-main-color: #b4b4b4;
      --r-heading-color: #fff;
      --btn-bg: rgba(255, 255, 255, 0.1);
      --btn-border: rgba(255, 255, 255, 0.2);
      --btn-bg-hover: rgba(255, 255, 255, 0.2);
      --btn-border-hover: rgba(255, 255, 255, 0.4);
      --btn-color: #fff;
    }

    /* Light theme */
    [data-theme='light'] {
      --r-background-color: #f8f9fa;
      --r-main-color: #333;
      --r-heading-color: #111;
      --btn-bg: rgba(0, 0, 0, 0.1);
      --btn-border: rgba(0, 0, 0, 0.2);
      --btn-bg-hover: rgba(0, 0, 0, 0.2);
      --btn-border-hover: rgba(0, 0, 0, 0.4);
      --btn-color: #333;
    }

    body {
      background: var(--r-background-color);
    }
    .back-button {
      position: fixed;
      top: 24px;
      left: 24px;
      z-index: 1000;
      color: var(--btn-color);
      text-decoration: none;
      transition: opacity 0.3s;
      opacity: 0.7;
    }
    .back-button:hover {
      opacity: 1;
    }

    /* Scroll hint arrow - reveal.js style bounce animation */
    @keyframes bounce-down {
      0%, 10%, 25%, 40%, 50% { transform: translateY(0); }
      20% { transform: translateY(10px); }
      30% { transform: translateY(-5px); }
    }

    .scroll-hint {
      position: fixed;
      bottom: 36px;
      right: 36px;
      z-index: 1000;
      color: var(--btn-color);
      cursor: pointer;
      animation: bounce-down 2s ease-out infinite;
      transition: opacity 0.3s;
      opacity: 0.7;
    }

    .scroll-hint:hover {
      opacity: 1;
    }

    .scroll-hint.hidden {
      opacity: 0;
      pointer-events: none;
    }
    .reveal-viewport {
      background: var(--r-background-color);
    }
    .reveal {
      font-family: 'Noto Sans JP', sans-serif;
    }
    .reveal h1, .reveal h2, .reveal h3, .reveal h4 {
      font-family: 'Noto Sans JP', sans-serif;
    }
    .reveal pre {
      width: 100%;
      font-size: 0.8em;
    }
    .reveal pre code {
      max-height: 500px;
      padding: 1em;
    }
    .reveal ul, .reveal ol {
      display: block;
      text-align: left;
      margin-left: 1em;
    }
    .reveal li {
      margin-bottom: 0.5em;
    }
    .reveal section {
      text-align: left;
    }
    .reveal p {
      line-height: 1.8;
    }
    .reveal a {
      color: #3b82f6;
    }
    /* Scroll view styles */
    .reveal .slides section {
      min-height: 100vh;
      padding: 80px 60px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }
    .reveal .slides section h2 {
      text-align: center;
      width: 100%;
    }
    /* Block math alignment */
    .katex-display {
      display: block;
      text-align: center;
      margin: 1em 0;
    }

  </style>
</head>
<body>
  <a href={docUrl} class="back-button" title="記事に戻る">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
      <path d="M17.77 3.77 16 2 6 12l10 10 1.77-1.77L9.54 12z"/>
    </svg>
  </a>

  <div class="scroll-hint" id="scrollHint">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor" style="transform: rotate(-90deg);">
      <path d="M17.77 3.77 16 2 6 12l10 10 1.77-1.77L9.54 12z"/>
    </svg>
  </div>

  <div class="reveal">
    <div class="slides">
      {filteredSlidesHtml.map((html) => (
        <section set:html={html} />
      ))}
    </div>
  </div>

  <script is:inline src="https://cdn.jsdelivr.net/npm/reveal.js@5.2.1/dist/reveal.js"></script>
  <script is:inline src="https://cdn.jsdelivr.net/npm/reveal.js@5.2.1/plugin/highlight/highlight.js"></script>
  <script is:inline>
    Reveal.initialize({
      hash: true,
      view: 'scroll',
      scrollProgress: 'auto',
      center: true,
      plugins: [RevealHighlight],
      // Custom option: hide scroll hint after scroll/click
      hideScrollHintAfterInteraction: false
    });

    // Render math with KaTeX after page load
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof renderMathInElement !== 'undefined') {
        renderMathInElement(document.body, {
          delimiters: [
            {left: '$$', right: '$$', display: true},
            {left: '$', right: '$', display: false}
          ],
          throwOnError: false
        });
      }
    });

    /**
     * スクロールヒント矢印の動作:
     * - クリックで次のスライドへ移動
     * - 最後のスライドに到達したら非表示
     * - 最後のスライド以外では再表示（hideScrollHintAfterInteraction: false の場合）
     * - hideScrollHintAfterInteraction: true の場合、最初のスクロール/クリックで永久に非表示
     */
    (function() {
      const scrollHint = document.getElementById('scrollHint');
      const hideAfterInteraction = Reveal.getConfig().hideScrollHintAfterInteraction;
      const totalSlides = Reveal.getTotalSlides();

      function hideHint() {
        scrollHint.classList.add('hidden');
      }

      function showHint() {
        scrollHint.classList.remove('hidden');
      }

      function checkSlidePosition() {
        const indices = Reveal.getIndices();
        const isLastSlide = indices.h === totalSlides - 1;

        if (isLastSlide) {
          hideHint();
        } else if (!hideAfterInteraction) {
          showHint();
        }
      }

      // Click to go to next slide
      scrollHint.addEventListener('click', function() {
        Reveal.next();
        if (hideAfterInteraction) {
          hideHint();
        }
      });

      // Check on slide change
      Reveal.on('slidechanged', checkSlidePosition);

      // Initial check
      checkSlidePosition();

      /**
       * 戻るボタンのアンカーリンク更新:
       * - 現在のスライド内の最初の見出し(h1-h6)を検出
       * - その見出しのIDをアンカーとして戻り先URLに追加
       * - 見出しがない場合はベースURLのまま
       */
      const backButton = document.querySelector('.back-button');
      const baseDocUrl = backButton?.getAttribute('href') || '/';

      function updateBackButtonAnchor() {
        const currentSlide = Reveal.getCurrentSlide();
        if (!currentSlide || !backButton) return;

        // 現在のスライド内の最初の見出しを検索
        const heading = currentSlide.querySelector('h1, h2, h3, h4, h5, h6');
        if (heading && heading.id) {
          backButton.setAttribute('href', baseDocUrl + '#' + heading.id);
        } else {
          backButton.setAttribute('href', baseDocUrl);
        }
      }

      Reveal.on('slidechanged', updateBackButtonAnchor);
      updateBackButtonAnchor();

      if (hideAfterInteraction) {
        window.addEventListener('scroll', hideHint, { passive: true, once: true });
        window.addEventListener('touchmove', hideHint, { passive: true, once: true });
      }
    })();
  </script>

  <style is:inline>
    /* reveal.js custom scrollbar color for light theme */
    [data-theme='light'] .scrollbar-playhead {
      background: rgba(0, 0, 0, 0.5) !important;
    }
    [data-theme='light'] .scrollbar-slide {
      background: rgba(0, 0, 0, 0.15) !important;
    }
  </style>
</body>
</html>
